---
import "../styles/global.css";
const props = Astro.props;
const newClass = `btn btn--with-icon ${props.class && props.class}`;
const btnIconClass = `btn-icon fa ${
    props.invertarrow === "true" ? "fa-long-arrow-left" : "fa-long-arrow-right"
}`;
---

<a href={props.url} class={newClass}>
    <i class={btnIconClass}></i>
    {props.name}
</a>

<style>
    .btn {
        background: white;
        text-decoration: none;
        color: #363738;
        font-weight: bold;
        outline: none;
        box-shadow: 1px 1px 3px 0 rgba(0, 0, 0, 0.2);
        overflow: hidden;
        border-radius: 0;
        height: 50px;
        line-height: 50px;
        display: inline-block;
        padding: 0;
        border: none;
    }

    .btn:focus {
        box-shadow: none;
    }

    .btn:hover {
        background: var(--theme-color-three);
        color: #fff;
    }

    .btn.btn--with-icon {
        padding-right: 20px;
    }

    .btn.btn--with-icon i {
        padding: 0px 30px 0px 15px;
        margin-right: 10px;
        height: 50px;
        line-height: 50px;
        vertical-align: bottom;
        color: white;
        background: var(--theme-color-three);
        clip-path: polygon(0 0, 70% 0, 100% 100%, 0% 100%);
    }

    .btn.btn--only-icon {
        width: 50px;
    }
</style>
